{
  // ==========================================================================

  // --------------------------------------------------------------------------
  // editor

  "editor.autoClosingBrackets": "beforeWhitespace",
  "editor.autoIndent": "brackets",
  "editor.colorDecorators": false,
  "editor.copyWithSyntaxHighlighting": false,
  "editor.cursorBlinking": "blink",
  "editor.cursorStyle": "line",
  "editor.cursorWidth": 2,
  "editor.detectIndentation": false,
  "editor.dragAndDrop": false,
  "editor.emptySelectionClipboard": false,
  "editor.formatOnPaste": false,
  "editor.formatOnSave": false,
  "editor.formatOnType": false,
  "editor.insertSpaces": true,
  "editor.quickSuggestionsDelay": 200,
  "editor.renderControlCharacters": true,
  "editor.renderLineHighlight": "all",
  "editor.renderWhitespace": "boundary",
  "editor.roundedSelection": false,
  "editor.rulers": [80, 100, 120, 140, 160],
  "editor.scrollBeyondLastLine": false,
  "editor.smoothScrolling": true,
  "editor.tabSize": 2,
  "editor.trimAutoWhitespace": false,
  "editor.useTabStops": true,
  "editor.wrappingIndent": "none",
  "editor.wordWrap": "on",

  // editor.comment

  "editor.comments.ignoreEmptyLines": false,

  // editor.find

  "editor.find.seedSearchStringFromSelection": false,

  // editor.minimap

  "editor.minimap.renderCharacters": false,
  "editor.minimap.showSlider": "always",
  "editor.minimap.size": "proportional",

  // editor.suggest

  "editor.suggest.localityBonus": true,
  "editor.suggest.statusBar.visible": true,

  // --------------------------------------------------------------------------
  // diffEditor

  "diffEditor.ignoreTrimWhitespace": true,

  // --------------------------------------------------------------------------
  // files

  "files.autoGuessEncoding": false,
  "files.autoSave": "off",
  "files.encoding": "utf8",
  "files.exclude": {
    "**/.git": true,
    "**/.svn": true,
    "**/.hg": true,
    "**/CVS": true,
    "**/.DS_Store": true,
    "**/node_modules": true
  },
  "files.insertFinalNewline": false,
  "files.trimFinalNewlines": false,
  "files.trimTrailingWhitespace": false,

  // --------------------------------------------------------------------------
  // workbench

  "workbench.enableExperiments": false,
  "workbench.iconTheme": "vscode-icons",
  "workbench.quickOpen.closeOnFocusLost": false,
  "workbench.startupEditor": "none",

  // workbench.editor

  "workbench.editor.labelFormat": "short",
  "workbench.editor.untitled.labelFormat": "name",

  // workbench.list

  "workbench.list.automaticKeyboardNavigation": false,

  // workbench.settings
  "workbench.settings.enableNaturalLanguageSearch": false,

  // workbench.tips

  "workbench.tips.enabled": false,

  // workbench.tree
  "workbench.tree.indent": 12,
  "workbench.tree.renderIndentGuides": "always",

  // --------------------------------------------------------------------------
  // breadcrumbs

  "breadcrumbs.enabled": true,
  "breadcrumbs.icons": false,

  // --------------------------------------------------------------------------
  // window

  "window.customMenuBarAltFocus": false,
  "window.enableMenuBarMnemonics": false,
  "window.menuBarVisibility": "visible",
  "window.nativeTabs": true,
  "window.newWindowDimensions": "inherit",
  "window.openFoldersInNewWindow": "on",
  "window.openWithoutArgumentsInNewWindow": "on",
  "window.title": "${dirty}${activeEditorMedium}${separator}${rootName}${separator}${appName}",

  // --------------------------------------------------------------------------
  // explorer

  "explorer.confirmDragAndDrop": false,

  // --------------------------------------------------------------------------
  // search

  "search.collapseResults": "auto",
  "search.searchOnType": false,

  // --------------------------------------------------------------------------
  // extensions

  "extensions.ignoreRecommendations": false,

  // ==========================================================================

  // --------------------------------------------------------------------------
  // css

  "[css]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },

  // --------------------------------------------------------------------------
  // html

  "html.format.unformatted": null,
  "html.format.wrapLineLength": 0,
  "[html]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },

  // --------------------------------------------------------------------------
  // json

  "json.format.enable": false,
  "[json]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[jsonc]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },

  // --------------------------------------------------------------------------
  // php

  "[php]": {
    "editor.tabSize": 4,
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },

  // --------------------------------------------------------------------------
  // scss

  "scss.validate": true,

  // --------------------------------------------------------------------------
  // javascript

  "javascript.format.enable": false,
  "javascript.updateImportsOnFileMove.enabled": "always",
  "javascript.validate.enable": false,
  "[javascript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[javascriptreact]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },

  // --------------------------------------------------------------------------
  // typescript

  "typescript.tsserver.log": "normal",
  "typescript.validate.enable": false,
  "typescript.updateImportsOnFileMove.enabled": "always",
  "[typescript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[typescriptreact]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },

  // ==========================================================================

  // --------------------------------------------------------------------------
  // C#

  "csharp.format.enable": false,
  "csharp.referencesCodeLens.enabled": false,
  "csharpfixformat.sort.usings.splitGroups": true,
  "csharpfixformat.style.newline.atEnd": true,
  "csharpfixformat.style.newline.elseCatch": true,

  // --------------------------------------------------------------------------
  // eslint

  "eslint.enable": false,

  // --------------------------------------------------------------------------
  // highlight

  "highlight.regexFlags": "mgi",
  "highlight.regexes": {
    "^(\\+.*)": {
      "filterFileRegex": ".*\\.snap",
      "decorations": [
        { "overviewRulerColor": "#006600", "backgroundColor": "#006600" }
      ]
    },
    "^(\\-.*)": {
      "filterFileRegex": ".*\\.snap",
      "decorations": [
        { "overviewRulerColor": "#660000", "backgroundColor": "#660000" }
      ]
    }
  },

  // --------------------------------------------------------------------------
  // indent-rainbow

  "indentRainbow.colors": [
    "rgba(255,255,255,0.01)",
    "rgba(255,255,255,0.02)",
    "rgba(255,255,255,0.03)",
    "rgba(255,255,255,0.02)"
  ],

  // --------------------------------------------------------------------------
  // php extensions

  "phpcbf.enable": false,
  "phpcs.enable": false,
  "phpcs.standard": "PSR2",

  // --------------------------------------------------------------------------
  // prettier

  "prettier.disableLanguages": [],

  // --------------------------------------------------------------------------
  // python

  "python.linting.enabled": false,
  "python.linting.flake8Enabled": false,
  "python.linting.lintOnSave": false,
  "python.linting.pylintEnabled": false,
  "[python]": {
    "editor.tabSize": 4
  },

  // --------------------------------------------------------------------------
  // vscode-icons

  "vsicons.dontShowNewVersionMessage": true
}
